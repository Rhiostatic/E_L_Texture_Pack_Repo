{
  "format_version": "1.8.0",
  "render_controllers": {
    "controller.render.pig": {
      "geometry": "geometry.default",
      "materials": [ { "*": "Material.default" } ],
      "textures": [ "query.is_saddled ? array.saddled[variable.xvar] : array.xskins[variable.xvar]" ],
      "arrays": {
        "textures": {
          "array.xskins": [
            "texture.default",
            "texture.default2",
            "texture.default3"
          ],
          "array.saddled": [
            "texture.saddled",
            "texture.saddled2",
            "texture.saddled3"
          ]
        }
      }
    }
  }
}

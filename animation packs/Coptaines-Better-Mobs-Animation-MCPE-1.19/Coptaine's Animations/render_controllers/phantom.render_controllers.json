{
  "format_version": "1.8.0",
  "render_controllers": {
    "controller.render.phantom": {
      "arrays": {
        "materials": {
          "Array.materials": [ "Material.default", "Material.invisible" ]
        }
      },
      "geometry": "Geometry.default",
      "materials": [ { "*": "Array.materials[query.is_invisible]" } ],
      "textures": [ "Texture.default" ],
      "is_hurt_color": {
        "r": "q.is_alive ? 1 : 0",
        "g": "q.is_alive ? 0 : 0",
        "b": "q.is_alive ? 0 : 0",
        "a": "q.is_alive ? 0.6 : 0"
      },
      "on_fire_color": {
        "r": "q.is_alive ? 1 : 0",
        "g": "q.is_alive ? 0 : 0",
        "b": "q.is_alive ? 0 : 0",
        "a": "q.is_alive ? 0.6 : 0"
      }
    }
  }
}
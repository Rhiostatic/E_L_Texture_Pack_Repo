{
  "format_version": "1.8.0",
  "render_controllers": {
    "controller.render.donkey.v1.and.v2": {
      "part_visibility": [
        { "*saddle*": "query.is_saddled" },
        { "SaddleMouthLine": "query.is_saddled && query.has_rider" },
        { "SaddleMouthLineR": "query.is_saddled && query.has_rider" },
        { "Bag*": "query.is_chested" },
        { "Ear*": false }
      ],
      "geometry": "Geometry.default",
      "materials": [
        { "*": "Material.default" }
      ],
      "textures": [ "Texture.donkey", "Texture.markings_none", "Texture.armor_none" ],
      "is_hurt_color": {
        "r": "q.is_alive ? 1 : 0",
        "g": "q.is_alive ? 0 : 0",
        "b": "q.is_alive ? 0 : 0",
        "a": "q.is_alive ? 0.6 : 0"
      },
      "on_fire_color": {
        "r": "q.is_alive ? 1 : 0",
        "g": "q.is_alive ? 0 : 0",
        "b": "q.is_alive ? 0 : 0",
        "a": "q.is_alive ? 0.6 : 0"
      }
    }
  }
}
